<endpoint name="data/inputs/nginx_status">
  <header>NGINX Status API Input</header>
  <breadcrumb>
    <parent hidecurrent="False">datainputstats</parent>
    <name i18ntag="">nginx_status</name>
  </breadcrumb>
  <elements>
    <element name="name" label="Name">
      <view name="list" />
      <view name="create" />
    </element>
    <element name="loglevel" label="Log Level">
      <view name="list" />
      <view name="edit" />
      <view name="create" />
    </element>
    <element name="host_name" label="Nginx URL">
      <view name="list" />
      <view name="edit" />
      <view name="create" />
      <key name="helpText">Location of the Nginx status JSON REST interface (e.g. 127.0.0.1/api)</key>
    </element>
    <element name="nginx_plus_types" label="Nginx Plus Type(s)">
      <view name="list" />
      <view name="edit" />
      <view name="create" />
      <key name="helpText">Enter comma-separated Nginx Plus Types for which data needs to be fetched. Allowed values are processes,connections,slabs,http,stream,resolvers,ssl</key>
    </element>
    <element name="nginx_username" label="Nginx Username">
      <view name="list" />
      <view name="edit" />
      <view name="create" />
      <key name="helpText">Username to access the Nginx status JSON REST interface</key>
    </element>
    <element name="nginx_pwd" type="password" label="Nginx Password">
      <view name="edit" />
      <view name="create" />
      <key name="helpText">
        Password to access the Nginx status JSON REST interface
        <![CDATA[ <script type="text/javascript">
              $(function() { $('#nginx_pwd_id').val('');$('label[for*="nginx_pwd_id_confirm"]').html("Confirm Nginx Password");
              });
            </script> ]]>
      </key>
    </element>
    <element name="spl-ctrl_EnableAdvanced" type="checkbox" label="More settings" class="spl-mgr-advanced-switch">
      <view name="edit" />
      <view name="create" />
      <onChange>
        <key name="_action">showonly</key>
        <key name="0">NONE</key>
        <key name="1">ALL</key>
        <group_set>
          <group name="advanced" />
        </group_set>
<!--
// jscpd:ignore-start
-->
      </onChange>
    </element>
    <element name="advanced" type="fieldset" class="spl-mgr-advanced-options">
      <view name="edit" />
      <view name="create" />
      <elements>
        <element name="intervalFields" type="fieldset">
<!--
// jscpd:ignore-end
-->
          <key name="legend">Interval</key>
          <view name="list" />
          <view name="edit" />
          <view name="create" />
          <elements>
            <element name="interval" type="textfield" label="Interval">
              <view name="edit" />
              <view name="create" />
              <key name="exampleText">Number of seconds to wait before running the command again, or a valid cron schedule. (default value is 30 seconds)</key>
            </element>
<!--
// jscpd:ignore-start
-->
          </elements>
        </element>
      </elements>
    </element>
    <element name="advanced" type="fieldset" class="spl-mgr-advanced-options">
      <view name="edit" />
      <view name="create" />
      <elements>
        <element name="sourcetypeFields" type="fieldset">
<!--
// jscpd:ignore-end
-->
          <view name="list" />
          <view name="edit" />
          <view name="create" />
          <elements>
            <element name="spl-ctrl_sourcetypeSelect" type="select" label="Set sourcetype">
              <onChange>
                <key name="auto">NONE</key>
                <key name="_action">showonly</key>
                <group_set>
                  <group name="sourcetype" />
                  <group name="spl-ctrl_from_list" />
                </group_set>
                <key name="sourcetype">sourcetype</key>
                <key name="spl-ctrl_from_list">spl-ctrl_from_list</key>
              </onChange>
              <options>
                <opt value="auto" label="Automatic" />
                <opt value="spl-ctrl_from_list" label="From list" />
                <opt value="sourcetype" label="Manual" />
              </options>
              <view name="edit" />
              <view name="create" />
              <key name="exampleText">Set to automatic and Splunk will classify and assign sourcetype automatically. Unknown sourcetypes will be given a placeholder name.</key>
              <key name="processValueEdit">[ e for e in ['sourcetype'] if form_defaults.get(e) ]</key>
              <key name="processValueAdd">[ e for e in ['sourcetype'] if form_defaults.get(e) ]</key>
            </element>
            <element name="sourcetype" type="textfield" label="Source type">
              <view name="list" />
              <view name="edit" />
              <view name="create" />
              <key name="requiredIfVisible" />
              <key name="exampleText">If this field is left blank, the default value of script will be used for the source type.</key>
              <key name="processValueList">_('script') if (value==None or value=='') else value</key>
              <key name="submitValueAdd">form_data.get('spl-ctrl_from_list') if form_data.get('spl-ctrl_sourcetypeSelect')=='spl-ctrl_from_list' else value if form_data.get('spl-ctrl_sourcetypeSelect')=='sourcetype' else None</key>
              <key name="submitValueEdit">form_data.get('spl-ctrl_from_list') if form_data.get('spl-ctrl_sourcetypeSelect')=='spl-ctrl_from_list' else value if form_data.get('spl-ctrl_sourcetypeSelect')=='sourcetype' else None</key>
              <key name="labelList">Source type</key>
            </element>
            <element name="spl-ctrl_from_list" type="select" label="Select source type from list">
              <view name="edit" />
              <view name="create" />
              <key name="exampleText">
                Splunk classifies all common data types automatically, but if you're looking for something specific, you can find more source types in the
                <![CDATA[<a href="../../../apps/remote">SplunkApps apps browser</a>]]>
                or online at
                <![CDATA[<a href="http://apps.splunk.com/" target="_blank">apps.splunk.com</a>]]>
                .
              </key>
              <key name="requiredIfVisible" />
              <key name="dynamicOptions" type="dict">
                <key name="keyName">title</key>
                <key name="keyValue">title</key>
                <key name="splunkSource">/saved/sourcetypes</key>
                <key name="splunkSourceParams" type="dict">
                  <key name="count">-1</key>
                  <key name="search">'pulldown_type=true'</key>
                </key>
                <key name="prefixOptions" type="list">
                  <item type="list">
                    <item></item>
                    <item>Choose...</item>
                  </item>
                </key>
              </key>
            </element>
          </elements>
          <key name="legend">Source type</key>
<!--
// jscpd:ignore-start
-->
          <key name="helpText">Set sourcetype field for all events from this source.</key>
        </element>
      </elements>
    </element>
    <element name="advanced" type="fieldset" class="spl-mgr-advanced-options">
      <view name="edit" />
      <view name="create" />
      <elements>
        <element name="hostFields" type="fieldset">
<!--
// jscpd:ignore-end
-->
          <key name="legend">Host</key>
          <view name="list" />
          <view name="edit" />
          <view name="create" />
          <elements>
            <element name="host" type="textfield" label="Host field value">
              <view name="edit" />
              <view name="create" />
              <key name="helpText">Set the host with this value.</key>
            </element>
          </elements>
        </element>

        <!-- INDEX -->
        <element name="indexField" type="fieldset">
          <view name="list" />
          <view name="edit" />
          <view name="create" />
          <key name="legend">Index</key>
          <key name="helpText">Set the destination index for this source.</key>
          <elements>
            <element name="index" type="select" label="Index">
              <view name="list" />
              <view name="edit" />
              <view name="create" />
              <key name="dynamicOptions" type="dict">
                <key name="keyName">title</key>
                <key name="keyValue">title</key>
                <key name="splunkSource">/data/indexes</key>
                <key name="splunkSourceParams" type="dict">
                  <key name="count">"-1"</key>
                  <key name="datatype">"all"</key>
                  <key name="search">"isInternal=0 disabled=0 isVirtual=0"</key>
                </key>
                <key name="prefixOptions" type="list">
                  <item type="list">
                    <item>default</item> <!--value-->
                    <item>default</item> <!--label-->
                  </item>
                </key>
              </key>
              <key name="processValueList">'default' if value is None else value</key>
            </element>
          </elements>
        </element>
      </elements>
    </element>
    <element name="eai:acl.app" label="App">
      <view name="list" />
      <key name="processValueList">entity['eai:acl']['app'] or ""</key>
    </element>
  </elements>
</endpoint>
